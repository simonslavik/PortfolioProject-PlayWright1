# Environment Configuration
# Copy this file to .env and update with your values

# Application URL
BASE_URL=https://www.saucedemo.com

# Test User Credentials
TEST_USER_VALID_USERNAME=standard_user
TEST_USER_VALID_PASSWORD=secret_sauce

# Alternative test users
TEST_USER_LOCKED_OUT=locked_out_user
TEST_USER_PERFORMANCE=performance_glitch_user
TEST_USER_PROBLEM=problem_user

# Test Data
TEST_CHECKOUT_FIRST_NAME=John
TEST_CHECKOUT_LAST_NAME=Doe
TEST_CHECKOUT_ZIP_CODE=12345

# Timeouts (in milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ELEMENT_TIMEOUT=10000

# Browser Configuration
HEADLESS=true
SLOW_MO=0

# Reporter Configuration
REPORTER_TYPE=html
LOG_LEVEL=info

# CI/CD Flag
CI=false
